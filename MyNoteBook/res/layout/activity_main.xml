<com.magee.mynotebook.customview.MyDrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/layout"
        layout="@layout/right_layout" />

    <com.magee.mynotebook.customview.MyListView
        android:id="@+id/left_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/listbackground"
        android:cacheColorHint="#00000000"
        android:choiceMode="singleChoice"
        android:divider="@drawable/partition"
        android:dividerHeight="2dp" >
    </com.magee.mynotebook.customview.MyListView>

</com.magee.mynotebook.customview.MyDrawerLayout>